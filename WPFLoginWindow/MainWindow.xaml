<Window x:Class="WPFLoginWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLoginWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="765" Width="770" Background="Black">
    <Grid>
        <Border Name="_login" BorderBrush="White" BorderThickness="0" Height="380" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="60,166,52,188">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height=".15*"/>
                    <RowDefinition Height=".15*"/>
                    <RowDefinition Height=".15*"/>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" RenderTransformOrigin=".5,.5" Margin="0,-20,0,0" Source="Resources/font-awesome_4-7-0_user-circle-o_256_91_25abed_none.png" Grid.ColumnSpan="2">
                    <Image.RenderTransform>
                        <RotateTransform x:Name="AnimatedRotateTransform" Angle="0"/>
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="MouseDown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="AnimatedRotateTransform" 
                                                 Storyboard.TargetProperty="Angle" 
                                                 By="10"        
                                                 To="360" 
                                                 Duration="0:0:1" 
                                                 FillBehavior="Stop"
                                                 RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>
                <!--<local:CircleSpinner Padding="58,52,58,48" Margin="0,-20,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderThickness="0"/>-->
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20" Margin="0,0,0,10" FontFamily="pack://application:,,,/fonts/#Roboto" Foreground="#FF0984C1">Login to PLANTA Project</TextBlock>
                <local:LabeledTextBox Grid.Row="1" Margin="15,0,15,0" x:Name="_usernameTB"/>
                <local:LabeledTextBox Grid.Row="2" Margin="15,0,15,0" x:Name="_passwordTB"/>
                <Button Grid.Row="3" Height="Auto" Width="Auto" Padding="35,5,35,5" BorderThickness="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="2" FontFamily="pack://application:,,,/fonts/#Roboto" FontSize="16" Click="LoginButtonClick">Login</Button>
            </Grid>
        </Border>
    </Grid>
</Window>
