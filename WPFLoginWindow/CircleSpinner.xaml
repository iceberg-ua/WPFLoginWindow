<UserControl x:Class="WPFLoginWindow.CircleSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFLoginWindow"
             mc:Ignorable="d" BorderThickness="0" BorderBrush="Transparent" Margin="0,0,0,0">
    <Grid>
        <Ellipse HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF25ABED" Offset="1"/>
                    <GradientStop Color="Transparent" Offset="0.8"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

    </Grid>
</UserControl>
