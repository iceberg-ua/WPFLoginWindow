<UserControl x:Class="WPFLoginWindow.Spinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFLoginWindow"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="300">
    <Grid>
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="10" Stroke="Black">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="-1,0" EndPoint="2, 0">
                    <GradientStop Color="White" Offset="-2"/>
                    <GradientStop Color="#FF25ABED" Offset="-1.5"/>
                    <GradientStop Color="White" Offset="-1"/>
                    <GradientStop Color="#FF25ABED" Offset="-0.5"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
